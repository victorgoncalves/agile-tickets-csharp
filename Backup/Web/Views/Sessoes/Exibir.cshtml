@model AgileTickets.Web.Models.Sessao

@{
    ViewBag.Title = "Sessão";
}

<h2>Sessão: @Model.Espetaculo.Nome</h2>

<p class="error">
@TempData["MensagemDeErro"]
</p>

<p>Data: @Model.Inicio.ToString("dd/MM/yyyy")</p>
<p>Total de Ingressos: @Model.TotalDeIngressos</p>
<p>Total de Ingressos Reservados: @Model.IngressosReservados</p>
<p>Total de Ingressos Disponíveis: @Model.IngressosDisponiveis</p>

@if(@Model.IngressosDisponiveis > 0) {
<form action="@Url.Action("Reservar", new { id = @Model.Id })" method="post">
    Quantidade: <input type="text" name="quantidade" />
    <input type="submit" value="Reservar Ingressos" />
</form>
}
